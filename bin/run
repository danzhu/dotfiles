#!/usr/bin/env bash

set -o errexit -o noclobber -o noglob -o nounset -o pipefail
IFS=$'\n'

ERR_FAIL=2
ERR_BUG=3

usage() {
    cat <<EOF
Usage: $0 [OPTION]... FILE [ARGS]

  -h, --help      display this help and exit
  -m, --mem       run with valgrind checking for memory errors
EOF
}

OPTIONS=hm
LONG_OPTIONS=help,mem

if ! OPT=$(getopt --options=$OPTIONS \
                  --longoptions=$LONG_OPTIONS \
                  --name "$0" \
                  -- "$@")
then
    exit $ERR_FAIL
fi

eval set -- "$OPT"
MEM=false
while true; do
    arg="$1"
    shift

    case "$arg" in
        -h|--help)
            usage
            exit
            ;;
        -m|--mem)
            MEM=true
            ;;
        --)
            break
            ;;
        *)
            echo "oops"
            exit $ERR_BUG
            ;;
    esac
done

if [[ $# -lt 1 ]]; then
    usage
    exit $ERR_FAIL
fi

filename="$1"
shift
args=("$@")

exe="$(readlink -f "${filename%.*}")"
cmd=("$exe")

case "$filename" in
    *.s)
        gcc "$filename" -o "$exe"
        ;;
    *.c)
        gcc -Wall -Wextra -g "$filename" -o "$exe"
        ;;
    *.cc|*.cpp|*.C)
        g++ -std=c++20 -Wall -Wextra -g "$filename" -o "$exe"
        ;;
    *.rs)
        rustc -g "$filename" -o "$exe"
        ;;
    *.hs)
        ghc -g "$filename" -o "$exe"
        ;;
    *.idr)
        idris2 "$filename" -o "$exe"
        ;;
    *.cs)
        cmd=(mono "$exe.exe")
        mcs "$filename"
        ;;
    *.java)
        cmd=(java "${filename%.*}")
        javac -g "$filename"
        ;;
    *.py)
        cmd=(python "$filename")
        ;;
    *.js)
        cmd=(node "$filename")
        ;;
    *.rb)
        cmd=(ruby "$filename")
        ;;
    *)
        echo "extension not recognized" >&2
        exit $ERR_FAIL
        ;;
esac

if [[ $MEM = true ]]; then
    cmd=(valgrind --leak-check=full "${cmd[@]}")
fi

"${cmd[@]}" "${args[@]}"
