alias ls='ls -h --color=auto'
alias la='ls -A'
alias ll='ls -l'
alias lal='ls -Al'
alias mv='mv -iv'
alias cp='cp -iv'
alias ln='ln -iv'
alias rm='rm -Iv'
alias ga='git add'
alias gb='git branch'
alias gs='git status'
alias gc='git commit'
alias gps='git push'
alias gpl='git pull'
alias gco='git checkout'
alias gcb='git checkout -b'
alias mkdir='mkdir -pv'
alias grep='grep --color=auto'
alias diff='diff --color=auto'

if [[ -f ~/.dotfiles/common/aliases.local ]]; then
    source ~/.dotfiles/common/aliases.local
fi

