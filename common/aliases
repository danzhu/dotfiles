alias ls='ls -h --color=auto'
alias la='ls -A'
alias ll='ls -l'
alias mv='mv -i'
alias cp='cp -i'
alias ln='ln -i'
alias rm='rm -Iv'
alias gs='git status'
alias gc='git commit'
alias mkdir='mkdir -pv'
alias grep='grep --color=auto'
alias diff='diff --color=auto'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

if [[ -f ~/.dotfiles/common/aliases.local ]]; then
    source ~/.dotfiles/common/aliases.local
fi

