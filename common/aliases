alias ls='ls -h --color=auto'
alias la='ls -A'
alias ll='ls -l'
alias lal='ls -Al'
alias mv='mv -iv'
alias cp='cp -iv'
alias ln='ln -iv'
alias rm='rm -Iv'
alias ga='git add'
alias gaa='git add --all'
alias gb='git branch'
alias gc='git commit'
alias gce='git commit --allow-empty-message -m ""'
alias gd='git diff'
alias gdc='git diff --cached'
alias gs='git status'
alias gf='git fetch'
alias gm='git merge'
alias gps='git push'
alias gpl='git pull'
alias gco='git checkout'
alias gcb='git checkout -b'
alias gst='git stash save'
alias gsp='git stash pop'
alias mkdir='mkdir -pv'
alias grep='grep --color=auto'
alias diff='diff --color=auto'

if [[ -f ~/.dotfiles/common/aliases.local ]]; then
    source ~/.dotfiles/common/aliases.local
fi

