# -*- mode: sh -*-

if type emacs &> /dev/null; then
    export EDITOR=emacs
elif type vim &> /dev/null; then
    export EDITOR=vim
fi

if type chromium &> /dev/null; then
    export BROWSER=chromium
elif type chromium-browser &> /dev/null ; then
    export BROWSER=chromium-browser
fi

if [[ -f $DOT/common/env.local ]]; then
    source $DOT/common/env.local
fi

# vim: ft=sh
