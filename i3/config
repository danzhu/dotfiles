# i3 config file (v4)
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

set $mod Mod4

set_from_resource $c00 i3wm.color0 "#000000"
set_from_resource $c01 i3wm.color1 "#000000"
set_from_resource $c02 i3wm.color2 "#000000"
set_from_resource $c03 i3wm.color3 "#000000"
set_from_resource $c04 i3wm.color4 "#000000"
set_from_resource $c05 i3wm.color5 "#000000"
set_from_resource $c06 i3wm.color6 "#000000"
set_from_resource $c07 i3wm.color7 "#000000"
set_from_resource $c08 i3wm.color8 "#000000"
set_from_resource $c09 i3wm.color9 "#000000"
set_from_resource $c10 i3wm.color10 "#000000"
set_from_resource $c11 i3wm.color11 "#000000"
set_from_resource $c12 i3wm.color12 "#000000"
set_from_resource $c13 i3wm.color13 "#000000"
set_from_resource $c14 i3wm.color14 "#000000"
set_from_resource $c15 i3wm.color15 "#000000"
set_from_resource $cfg i3wm.foreground "#000000"
set_from_resource $cbg i3wm.background "#000000"

# workspace names
set $ws0 "0"
set $ws1 "1:web"
set $ws2 "2:dev"
set $ws3 "3:cfg"
set $ws4 "4:doc"
set $ws5 "5:ref"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"

# screenshot path
set $sspath "pictures/screenshots/$(date --iso-8601='seconds').png"

font pango:monospace 9

floating_modifier $mod
# default_orientation auto
# workspace_layout default
# title_align left
# default_border pixel 1
# default_floating_border normal
hide_edge_borders both
# focus_follow_mouse yes
# mouse_wraping output
# popup_during_fullscreen smart
# focus_wrapping yes
# workspace_auto_back_and_forth no
# force_display_urgency_hint 500 ms
# focus_on_window_activation smart
# show_marks yes

# gaps inner 6
# gaps outer 0
# smart_gaps on

# rules
for_window [workspace=$ws1] layout tabbed
# no_focus []

# assign
# assign [] workspace $ws1

# workspace $ws1 output VGA-1 DP1 eDP1
workspace $ws1 output primary

# class                 border  bg      text    ind     child_border
client.focused          $c12    $c00    $c12    $c00    $c00
client.focused_inactive $c07    $c00    $cfg    $c00    $c00
client.unfocused        $c08    $c00    $c07    $c00    $c00
client.urgent           $c09    $c00    $c09    $c00    $c00
client.placeholder      $cbg    $c00    $cfg    $cbg    $c00

client.background       $cbg

# volume controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +2%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -2%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle

# brightness controls
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 5
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 5

# playback controls
bindsym XF86AudioPlay nop
bindsym XF86AudioStop nop
bindsym XF86AudioPrev nop
bindsym XF86AudioNext nop

bindsym XF86TouchpadToggle nop

# screenshot
bindsym --release Print exec --no-startup-id import -window root $sspath
bindsym --release Shift+Print exec --no-startup-id import $sspath

# commonly-used programs
bindsym $mod+Return exec $TERMINAL
bindsym $mod+e exec $GEDITOR
bindsym $mod+b exec $BROWSER
bindsym $mod+d exec $LAUNCHER
bindsym $mod+r exec $RUNNER
bindsym $mod+m exec start $MANAGER
bindsym $mod+w exec rofi -show window -show-icons
bindsym $mod+c exec rofi -show ssh

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

bindsym $mod+u [urgent=latest] focus

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# focus parent / child container
bindsym $mod+o focus parent
bindsym $mod+i focus child

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# splits
bindsym $mod+s split v
bindsym $mod+v split h

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+t layout toggle
bindsym $mod+Shift+t layout stacking
bindsym $mod+Shift+w layout tabbed
bindsym $mod+Shift+s layout toggle split

# floating
bindsym $mod+a focus mode_toggle
bindsym $mod+Shift+a floating toggle

# scratchpad
bindsym $mod+space scratchpad show
bindsym $mod+Shift+space move scratchpad

# kill focused window
bindsym $mod+minus kill
bindsym $mod+Shift+minus exec --no-startup-id xdotool getwindowfocus windowkill

# next / previous / last workspace
bindsym $mod+n workspace next
bindsym $mod+p workspace prev
bindsym $mod+Shift+n move workspace next
bindsym $mod+Shift+p move workspace prev
bindsym $mod+Tab workspace back_and_forth

# switch to workspace
bindsym $mod+0 workspace $ws0
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9

# move focused container to workspace
bindsym $mod+Shift+0 move container to workspace $ws0
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9

bindsym $mod+x mode "system"

mode "system" {
    # run i3 lock
    bindsym l exec --no-startup-id i3lock -c 000000; mode "default"

    # reload the configuration file
    bindsym c reload; mode "default"
    # restart i3 inplace (preserves your layout/session, can be used to upgrade
    # i3)
    bindsym r restart

    # exit i3 (logs you out of your X session)
    bindsym Shift+e exit
    # poweroff
    bindsym Shift+s exec --no-startup-id poweroff
    # reboot
    bindsym Shift+r exec --no-startup-id reboot

    bindsym Escape mode "default"
}

bindsym $mod+z mode "resize"

mode "resize" {
    # left / up shrink, down / right grow
    # left / right change width, up / down change height
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize grow height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt

    # same bindings, but for the arrow keys
    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt

    bindsym Escape mode "default"
}

bindsym $mod+y exec --no-startup-id setxkbmap -layout us; mode "keyboard"

mode "keyboard" {
    # volume controls
    bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +2%
    bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -2%
    bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle

    # brightness controls
    bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 5
    bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 5

    bindsym $mod+Escape exec --no-startup-id setxkbmap -variant dvp; mode "default"
}

bar {
    status_command i3status
    position top
    tray_output primary
    # tray_padding 0
    separator_symbol "/"
    # strip_workspace_numbers yes

    colors {
        background $cbg
        statusline $cfg
        separator $c07

        # colorclass        border  bg      text
        focused_workspace   $c12    $c00    $c12
        active_workspace    $c07    $c00    $c12
        inactive_workspace  $c08    $c00    $c07
        urgent_workspace    $c09    $c00    $c09
        binding_mode        $c11    $c00    $c11
    }
}
