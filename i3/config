# i3 config file (v4)
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

set $mod Mod4

set $cfg "#{{foreground}}"
set $cbg "#{{background}}"
set $c00 "#{{black}}"
set $c01 "#{{red}}"
set $c02 "#{{green}}"
set $c03 "#{{yellow}}"
set $c04 "#{{blue}}"
set $c05 "#{{magenta}}"
set $c06 "#{{cyan}}"
set $c07 "#{{white}}"
set $c08 "#{{light_black}}"
set $c09 "#{{light_red}}"
set $c10 "#{{light_green}}"
set $c11 "#{{light_yellow}}"
set $c12 "#{{light_blue}}"
set $c13 "#{{light_magenta}}"
set $c14 "#{{light_cyan}}"
set $c15 "#{{light_white}}"

# workspace names
set $ws0 0:tmp
set $ws1 1:web
set $ws2 2:dev
set $ws3 3:doc
set $ws4 4:dir
set $ws5 5:ssh
set $ws6 6:com
set $ws7 7
set $ws8 8
set $ws9 9:ext

# VGA-1 DP1 eDP1
set $primary primary
set $secondary HDMI-1-1

set $mpv_pane scratch:mpv

font pango:monospace {{font_size}}

floating_modifier $mod
# default_orientation auto
# workspace_layout default
# title_align left
# default_border pixel 1
# default_floating_border normal
hide_edge_borders both
# focus_follow_mouse yes
# mouse_wraping output
# popup_during_fullscreen smart
# focus_wrapping yes
# workspace_auto_back_and_forth no
# force_display_urgency_hint 500 ms
# focus_on_window_activation smart
# show_marks yes

# gaps inner 6
# gaps outer 0
# smart_gaps on

# rules
# for_window [workspace="$ws1|$ws4"] layout tabbed
# no_focus []

# assign
# assign [class="^mpv$"] workspace $ws0
assign [class="^discord$"] workspace $ws6

# auto scratchpad
for_window [class="^scratch$"] move scratchpad
exec {{terminal}} --class scratch {{ format terminal_run [ }}tmux new -As scratch{{ ] }}

workspace "$ws1" output $primary
workspace "$ws9" output $secondary

# class                 border  bg      text    ind     child_border
client.focused          $c12    $c00    $c12    $c00    $c00
client.focused_inactive $c07    $c00    $cfg    $c00    $c00
client.unfocused        $c08    $c00    $c07    $c00    $c00
client.urgent           $c09    $c00    $c09    $c00    $c00
client.placeholder      $cbg    $c00    $cfg    $cbg    $c00

client.background       $cbg

# mouse buttons
# The middle button over a titlebar kills the window
bindsym --release button2 kill
# The middle button and a modifer over any part of the window kills the window
bindsym --whole-window $mod+button2 kill
# The right button toggles floating
bindsym button3 floating toggle

# volume controls
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -2%
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +2%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle

# screen controls
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 5
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 5
bindsym XF86ScreenSaver exec --no-startup-id i3lock -c 000000

# playback controls
bindsym XF86AudioPlay exec --no-startup-id tmux send-keys -t $mpv_pane 'p'
bindsym XF86AudioStop nop
bindsym XF86AudioPrev exec --no-startup-id tmux send-keys -t $mpv_pane '<'
bindsym XF86AudioNext exec --no-startup-id tmux send-keys -t $mpv_pane '>'
bindsym Shift+XF86AudioLowerVolume exec --no-startup-id tmux send-keys -t $mpv_pane '/'
bindsym Shift+XF86AudioRaiseVolume exec --no-startup-id tmux send-keys -t $mpv_pane '*'
bindsym Shift+XF86AudioMute exec --no-startup-id tmux send-keys -t $mpv_pane 'm'

# misc controls
bindsym XF86TouchpadToggle nop
bindsym XF86Calculator nop

# screenshot
bindsym --release Print exec --no-startup-id ~/.config/i3/clip screenshot root
bindsym --release Shift+Print exec --no-startup-id ~/.config/i3/clip screenshot rect

# commonly-used programs
bindsym $mod+Return exec {{terminal}}
bindsym $mod+d exec {{launcher}}
bindsym $mod+r exec {{runner}}
bindsym $mod+e exec {{editor_gui}}
bindsym $mod+b exec {{browser_gui}}
bindsym $mod+m exec {{file_manager_gui}}
bindsym $mod+w exec {{window_switcher}}
bindsym $mod+c exec --no-startup-id ~/.config/i3/clip exec

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
bindsym $mod+Ctrl+h focus output left
bindsym $mod+Ctrl+l focus output right
bindsym $mod+Ctrl+j focus output down
bindsym $mod+Ctrl+k focus output up

bindsym $mod+u [urgent=latest] focus

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right
bindsym $mod+Ctrl+Shift+h move container to output left
bindsym $mod+Ctrl+Shift+l move container to output right
bindsym $mod+Ctrl+Shift+j move container to output down
bindsym $mod+Ctrl+Shift+k move container to output up

# focus parent / child container
bindsym $mod+o focus parent
bindsym $mod+i focus child

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# splits
bindsym $mod+s split v
bindsym $mod+v split h

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+t layout toggle
bindsym $mod+Shift+t layout stacking
bindsym $mod+Shift+w layout tabbed
bindsym $mod+Shift+s layout toggle split

# floating
bindsym $mod+a focus mode_toggle
bindsym $mod+Shift+a floating toggle

# scratchpad
bindsym $mod+space scratchpad show
bindsym $mod+Shift+space move scratchpad

# kill focused window
bindsym $mod+minus kill
bindsym $mod+Shift+minus exec --no-startup-id xdotool getwindowfocus windowkill

# next / previous / last workspace
bindsym $mod+n workspace next_on_output
bindsym $mod+p workspace prev_on_output
bindsym $mod+Shift+n move workspace next
bindsym $mod+Shift+p move workspace prev
bindsym $mod+Tab workspace back_and_forth

# switch to workspace
bindsym $mod+0 workspace $ws0
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9

# move focused container to workspace
bindsym $mod+Shift+0 move container to workspace $ws0
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9

bindsym $mod+x mode "system"

mode "system" {
    # reset resolution / fix i3status
    bindsym s exec --no-startup-id autorandr -c; exec --no-startup-id pkill -CONT i3status; mode "default"

    # run i3 lock
    bindsym l exec --no-startup-id i3lock -c 000000; mode "default"

    # reload the configuration file
    bindsym c reload; mode "default"
    # restart i3 inplace (preserves your layout/session, can be used to upgrade
    # i3)
    bindsym r restart

    # exit i3 (logs you out of your X session)
    bindsym Shift+e exit
    # poweroff
    bindsym Shift+s exec --no-startup-id poweroff
    # reboot
    bindsym Shift+r exec --no-startup-id reboot

    bindsym Escape mode "default"
}

bindsym $mod+g mode "go"

mode "go" {
    bindsym o exec osu; mode "default"
    bindsym t exec {{terminal}} {{ format terminal_run [ }}tmux new -As tox toxic{{ ] }}; mode "default"

    bindsym Escape mode "default"
}

bindsym $mod+z mode "resize"

mode "resize" {
    # left / up shrink, down / right grow
    # left / right change width, up / down change height
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize grow height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt

    # same bindings, but for the arrow keys
    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt

    bindsym Escape mode "default"
}

bindsym $mod+y exec --no-startup-id setxkbmap -layout us; mode "keyboard"

mode "keyboard" {
    # volume controls
    bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +2%
    bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -2%
    bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle

    # brightness controls
    bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 5
    bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 5

    bindsym $mod+Escape exec --no-startup-id setxkbmap -variant dvorak; mode "default"
}

bar {
    status_command i3status
    position top
    tray_output primary
    # tray_padding 0
    separator_symbol "/"
    # strip_workspace_numbers yes

    colors {
        background $cbg
        statusline $cfg
        separator $c07

        # colorclass        border  bg      text
        focused_workspace   $c12    $c00    $c12
        active_workspace    $c07    $c00    $c12
        inactive_workspace  $c08    $c00    $c07
        urgent_workspace    $c09    $c00    $c09
        binding_mode        $c11    $c00    $c11
    }
}
