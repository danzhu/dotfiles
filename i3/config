# i3 config file (v4)
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

set $mod Mod4

set $c00 "#323539"
set $c01 "#e66b58"
set $c02 "#22c75f"
set $c03 "#d8b944"
set $c04 "#737fe7"
set $c05 "#a867e2"
set $c06 "#42bca3"
set $c07 "#7b818a"
set $c08 "#41444b"
set $c09 "#f27f9a"
set $c10 "#88d46b"
set $c11 "#dfb971"
set $c12 "#74b7e7"
set $c13 "#e19ae6"
set $c14 "#46ded5"
set $c15 "#f0f3f4"
set $c16 "#d3d7d8"
set $c17 "#232425"

set $ws1 "1 web"
set $ws2 "2 dev"
set $ws3 "3 cfg"
set $ws4 "4 doc"
set $ws5 "5 ref"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws0 "10"

font pango:monospace 9
hide_edge_borders both
floating_modifier $mod

# volume controls
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -q set Master 3%+ unmute
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -q set Master 3%- unmute
bindsym XF86AudioMute exec --no-startup-id amixer -q set Master toggle

# brightness controls
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 20
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 20

# commonly-used programs
bindsym $mod+Return exec $TERMINAL
bindsym $mod+e exec $GEDITOR
bindsym $mod+c exec $BROWSER
bindsym $mod+d exec $LAUNCHER
bindsym $mod+w exec $SWITCHER
bindsym $mod+r exec $RUNNER

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# focus parent / child container
bindsym $mod+o focus parent
bindsym $mod+i focus child

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# splits
bindsym $mod+s split v
bindsym $mod+v split h

# change container layout (stacked, tabbed, toggle split)
# bindsym $mod+t layout stacking
# bindsym $mod+w layout tabbed
# bindsym $mod+e layout toggle split
bindsym $mod+t layout toggle
# bindsym $mod+w layout toggle split

# floating
bindsym $mod+a focus mode_toggle
bindsym $mod+Shift+a floating toggle

# scratchpad
bindsym $mod+space scratchpad show
bindsym $mod+Shift+space move scratchpad

# kill focused window
bindsym $mod+minus kill
bindsym $mod+Shift+minus exec --no-startup-id xdotool getwindowfocus windowkill

# next / previous / last workspace
bindsym $mod+n workspace next
bindsym $mod+p workspace prev
bindsym $mod+Tab workspace back_and_forth

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws0

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws0

workspace $ws1 output VGA-1

# class                 border  bg      text    ind     child_border
client.focused          $c12    $c00    $c12    $c07    $c00
client.focused_inactive $c07    $c17    $c16    $c08    $c17
client.unfocused        $c08    $c17    $c07    $c00    $c17
client.urgent           $c09    $c00    $c09    $c07    $c00
client.placeholder      $c17    $c00    $c16    $c17    $c00

client.background       $c17

bindsym $mod+x mode "system"

mode "system" {
    # run i3 lock
    bindsym l exec --no-startup-id i3lock -c 000000; mode "default"

    # reload the configuration file
    bindsym c reload; mode "default"
    # restart i3 inplace (preserves your layout/session, can be used to upgrade
    # i3)
    bindsym r restart

    # exit i3 (logs you out of your X session)
    bindsym Shift+e exit
    # poweroff
    bindsym Shift+s exec --no-startup-id poweroff
    # reboot
    bindsym Shift+r exec --no-startup-id reboot

    bindsym Escape mode "default"
}

bindsym $mod+z mode "resize"

mode "resize" {
    # left / up shrink, down / right grow
    # left / right change width, up / down change height
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize grow height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt

    # same bindings, but for the arrow keys
    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt

    bindsym Escape mode "default"
}

bar {
    status_command i3status
    position top
    tray_output primary
    separator_symbol "/"

    colors {
        background $c17
        statusline $c16
        separator $c07

        # colorclass        border  bg      text
        focused_workspace   $c12    $c00    $c12
        active_workspace    $c07    $c00    $c12
        inactive_workspace  $c08    $c17    $c07
        urgent_workspace    $c09    $c00    $c09
        binding_mode        $c11    $c00    $c11
    }
}
