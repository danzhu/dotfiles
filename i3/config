# i3 config file (v4)
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

set $mod Mod4

# colours
set $cfg "#{{foreground}}"
set $cbg "#{{background}}"
set $c00 "#{{black}}"
set $c01 "#{{red}}"
set $c02 "#{{green}}"
set $c03 "#{{yellow}}"
set $c04 "#{{blue}}"
set $c05 "#{{magenta}}"
set $c06 "#{{cyan}}"
set $c07 "#{{white}}"
set $c08 "#{{light_black}}"
set $c09 "#{{light_red}}"
set $c10 "#{{light_green}}"
set $c11 "#{{light_yellow}}"
set $c12 "#{{light_blue}}"
set $c13 "#{{light_magenta}}"
set $c14 "#{{light_cyan}}"
set $c15 "#{{light_white}}"

# workspace names
set $ws0 0:tmp
set $ws1 1:web
set $ws2 2:dev
set $ws3 3:doc
set $ws4 4:dir
set $ws5 5:ssh
set $ws6 6:com
set $ws7 7
set $ws8 8
set $ws9 9:ext

# VGA-1 DP1 eDP1
set $primary primary
set $secondary HDMI-1-1

set $mpv_pane scratch:mpv
set $screen_lock exec --no-startup-id i3lock -c 000000
set $volume_down exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -2%
set $volume_up exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +2%
set $mute_toggle exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
set $brightness_up exec --no-startup-id xbacklight -inc 5
set $brightness_down exec --no-startup-id xbacklight -dec 5

font pango:monospace {{font_size}}

floating_modifier $mod
# default_orientation auto
workspace_layout tabbed
# title_align left
default_border pixel 1
default_floating_border pixel 1
hide_edge_borders smart_no_gaps
# focus_follow_mouse yes
# mouse_warping output
# popup_during_fullscreen smart
# focus_wrapping workspace
# workspace_auto_back_and_forth no
# force_display_urgency_hint 500 ms
focus_on_window_activation focus
# show_marks yes

gaps inner 6
gaps outer 0
smart_gaps on

# rules
# for_window [workspace="$ws1|$ws4"] layout tabbed
# no_focus []

# assign
assign [class="^Zeal$"] workspace $ws3
assign [class="^Riot$"] workspace $ws6
assign [class="^discord$"] workspace $ws6
assign [class="^mpv$"] workspace $ws9

# auto scratchpad
for_window [class="^scratch$"] move scratchpad
exec --no-startup-id {{terminal}} --class scratch {{ format terminal_run [ }}tmux new -As scratch{{ ] }}

# background
exec --no-startup-id ~/.fehbg

workspace "$ws1" output $primary
workspace "$ws2" output $primary
workspace "$ws3" output $primary
workspace "$ws4" output $primary
workspace "$ws5" output $primary
workspace "$ws6" output $primary
workspace "$ws7" output $primary
workspace "$ws8" output $primary
workspace "$ws9" output $secondary $primary

# class                 border  bg      text    ind     child_border
client.focused          $c00    $c00    $c12    $c00    $c12
client.focused_inactive $c00    $c00    $cfg    $c00    $cfg
client.unfocused        $c00    $c00    $c07    $c00    $c08
client.urgent           $c00    $c00    $c09    $c00    $c09
client.placeholder      $c00    $c00    $c03    $c00    $c03

client.background       $cbg

# mouse buttons
# The middle button over a titlebar kills the window
bindsym --release button2 kill
# The middle button and a modifer over any part of the window kills the window
bindsym --whole-window $mod+button2 kill
# The right button toggles floating
bindsym button3 floating toggle

# volume controls
bindsym XF86AudioLowerVolume $volume_down
bindsym XF86AudioRaiseVolume $volume_up
bindsym XF86AudioMute $mute_toggle

# screen controls
bindsym XF86MonBrightnessUp $brightness_up
bindsym XF86MonBrightnessDown $brightness_down
bindsym XF86ScreenSaver $screen_lock

# playback controls
bindsym XF86AudioPlay exec --no-startup-id tmux send-keys -t $mpv_pane 'p'
bindsym XF86AudioStop nop
bindsym XF86AudioPrev exec --no-startup-id tmux send-keys -t $mpv_pane '<'
bindsym XF86AudioNext exec --no-startup-id tmux send-keys -t $mpv_pane '>'
bindsym Shift+XF86AudioLowerVolume exec --no-startup-id tmux send-keys -t $mpv_pane '/'
bindsym Shift+XF86AudioRaiseVolume exec --no-startup-id tmux send-keys -t $mpv_pane '*'
bindsym Shift+XF86AudioMute exec --no-startup-id tmux send-keys -t $mpv_pane 'm'

# misc controls
bindsym XF86TouchpadToggle nop
bindsym XF86Calculator nop

# screenshot
bindsym --release Print exec --no-startup-id ~/.config/i3/clip screenshot root
bindsym --release Shift+Print exec --no-startup-id ~/.config/i3/clip screenshot rect

# commonly-used programs
bindsym $mod+Return exec {{terminal}}
bindsym $mod+d exec {{launcher}}

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
bindsym $mod+Ctrl+h focus output left
bindsym $mod+Ctrl+l focus output right
bindsym $mod+Ctrl+j focus output down
bindsym $mod+Ctrl+k focus output up

bindsym $mod+u [urgent=latest] focus

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right
bindsym $mod+Ctrl+Shift+h move container to output left
bindsym $mod+Ctrl+Shift+l move container to output right
bindsym $mod+Ctrl+Shift+j move container to output down
bindsym $mod+Ctrl+Shift+k move container to output up

# focus parent / child container
bindsym $mod+o focus parent
bindsym $mod+i focus child

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# splits
bindsym $mod+s split v
bindsym $mod+v split h

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+t layout toggle
bindsym $mod+Shift+t layout stacking
bindsym $mod+Shift+w layout tabbed
bindsym $mod+Shift+s layout toggle split

# floating
bindsym $mod+a focus mode_toggle
bindsym $mod+Shift+a floating toggle

# scratchpad
bindsym $mod+space scratchpad show
bindsym $mod+Shift+space move scratchpad

# kill focused window
bindsym $mod+minus kill
bindsym $mod+Shift+minus exec --no-startup-id xdotool getwindowfocus windowkill

# next / previous / last workspace
bindsym $mod+n workspace next_on_output
bindsym $mod+p workspace prev_on_output
bindsym $mod+Shift+n move workspace next
bindsym $mod+Shift+p move workspace prev
bindsym $mod+Tab workspace back_and_forth

# switch to workspace
bindsym $mod+0 workspace $ws0
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9

# move focused container to workspace
bindsym $mod+Shift+0 move container to workspace $ws0
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9

bindsym $mod+x mode "system"

mode "system" {
    # reset resolution / fix i3status freeze
    bindsym s exec --no-startup-id ~/.config/i3/reset; mode "default"

    bindsym i exec --no-startup-id xinput --map-to-output 'HUION 420 Pen Pen (0)' eDP-1-1; mode "default"

    # lock screen
    bindsym l $screen_lock; mode "default"

    # reload the configuration file
    bindsym c reload; mode "default"
    # restart i3 inplace (preserves your layout/session, can be used to upgrade
    # i3)
    bindsym r restart

    # exit i3 (logs you out of your X session)
    bindsym Shift+e exit
    # poweroff
    bindsym Shift+s exec --no-startup-id poweroff
    # reboot
    bindsym Shift+r exec --no-startup-id reboot

    bindsym Escape mode "default"
}

bindsym $mod+r mode "run"

mode "run" {
    bindsym $mod+o exec osu; mode "default"
    bindsym $mod+t exec {{terminal}} {{ format terminal_run [ }}tmux new -As tox toxic{{ ] }}; mode "default"
    bindsym $mod+r exec {{runner}}; mode "default"
    bindsym $mod+e exec --no-startup-id {{editor_gui}}; mode "default"
    bindsym $mod+b exec {{browser_gui}}; mode "default"
    bindsym $mod+f exec {{file_manager_gui}}; mode "default"
    bindsym $mod+d exec {{doc_viewer}}; mode "default"
    bindsym $mod+w exec {{window_switcher}}; mode "default"
    bindsym $mod+c exec --no-startup-id ~/.config/i3/clip exec; mode "default"

    bindsym Escape mode "default"
}

bindsym $mod+z mode "resize"

mode "resize" {
    # left / up shrink, down / right grow
    # left / right change width, up / down change height
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize grow height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt

    # same bindings, but for the arrow keys
    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt

    bindsym Escape mode "default"
}

bindsym $mod+y exec --no-startup-id setxkbmap -layout us; mode "keyboard"

mode "keyboard" {
    # volume controls
    bindsym XF86AudioRaiseVolume $volume_up
    bindsym XF86AudioLowerVolume $volume_down
    bindsym XF86AudioMute $mute_toggle

    # brightness controls
    bindsym XF86MonBrightnessUp $brightness_up
    bindsym XF86MonBrightnessDown $brightness_down

    bindsym $mod+Escape exec --no-startup-id setxkbmap -layout {{xkb_layout}} -variant {{xkb_variant}}; mode "default"
}

bar {
    status_command i3status
    position top
    tray_output primary
    # tray_padding 0
    separator_symbol "/"
    # strip_workspace_numbers yes

    colors {
        background $cbg
        statusline $cfg
        separator $c07

        # colorclass        border  bg      text
        focused_workspace   $c12    $c00    $c12
        active_workspace    $c07    $c00    $cfg
        inactive_workspace  $c08    $c00    $c07
        urgent_workspace    $c09    $c00    $c09
        binding_mode        $c11    $c00    $c11
    }
}
