# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

order += "ethernet _first_"
order += "wireless _first_"
order += "load"
order += "cpu_usage"
order += "cpu_temperature 0"
order += "disk /"
order += "battery 0"
order += "volume master"
order += "time"

general {
    output_format = "i3bar"
    colors = true
    interval = 5
    color_good = "#22c75f"
    color_degraded = "#d8b944"
    color_bad = "#e66b58"
}

ethernet _first_ {
    format_up = "%ip"
    format_down = ""
}

wireless _first_ {
    format_up = "%essid %quality %ip"
    format_down = ""
}

battery 0 {
    format = "⌁ %status %percentage %remaining"
    format_down = ""
    last_full_capacity = true
    integer_battery_capacity = true
    hide_seconds = true
    status_chr = "+"
    status_bat = "-"
    status_full = "="
    status_unk = "?"
    low_threshold = 20
}

time {
    format = "%a %b %d %I:%M:%S %p"
}

load {
    format = "%1min %5min %15min"
}

disk "/" {
    format = "%avail"
    low_threshold = 32
    threshold_type = gbytes_avail
}

cpu_usage {
    format = "cpu %usage"
}

cpu_temperature 0 {
    format = "%degrees°C"
}

volume master {
    format = "♫ %volume"
    format_muted = "♫ x"
}
