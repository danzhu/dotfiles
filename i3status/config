# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

order += "ethernet _first_"
order += "wireless _first_"
order += "load"
order += "cpu_usage"
order += "disk /"
order += "battery 0"
order += "volume master"
order += "time"

general {
    colors = true
    interval = 5
    color_good = "#22c75f"
    color_degraded = "#d8b944"
    color_bad = "#e66b58"
}

ethernet _first_ {
    format_up = "eth %ip"
    format_down = ""
}

wireless _first_ {
    format_up = "wifi %ip"
    format_down = ""
}

battery 0 {
    format = "%status %percentage"
    format_down = ""
    integer_battery_capacity = true
    status_chr = "chr"
    status_bat = "bat"
    status_full = "ful"
    status_unk = "unk"
    low_threshold = 20
}

time {
    format = "%a %b %d %I:%M:%S %p"
}

load {
    format = "load %1min"
}

disk "/" {
    format = "disk %avail [%percentage_avail]"
}

cpu_usage {
    format = "cpu %usage"
}

volume master {
    format = "vol %volume"
    format_muted = "mute"
}
