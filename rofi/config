! -*- mode: conf-xdefaults -*-

! style
rofi.font: monospace {{font_size}}
rofi.theme: code

! options
rofi.modi: run,drun,window,ssh
rofi.terminal: {{terminal}}
rofi.ssh-command: {terminal} {{ format terminal_run [ }}{ssh-client} {host} [-p {port}]{{ ] }}
rofi.run-shell-command: {terminal} {{ format terminal_run [ }}{cmd}{{ ] }}
rofi.scroll-method: 1

! key bindings
rofi.kb-clear-line:
rofi.kb-remove-word-back: Control+w,Control+BackSpace
