# -*- mode: sh -*-

alias ls='ls -h --color=auto'
alias la='ls -A'
alias ll='ls -l'
alias lal='ls -Al'
alias mv='mv -iv'
alias cp='cp -iv'
alias ln='ln -iv'
alias rm='rm -Iv'
alias sd='sudo '
alias ga='git add'
alias gaa='git add --all'
alias gb='git branch'
alias gc='git commit'
alias gce='git commit --allow-empty-message -m ""'
alias gca='git commit --amend --no-edit'
alias gd='git diff'
alias gdc='git diff --cached'
alias gs='git status'
alias gf='git fetch'
alias gm='git merge --no-edit'
alias gr='git reset'
alias gl='git log'
alias grt='git rev-parse --show-toplevel'
alias gcl='git clone'
alias gps='git push'
alias gpl='git pull'
alias gco='git checkout'
alias gcb='git checkout -b'
alias gst='git stash save'
alias gsp='git stash pop'
alias gsd='git stash drop'
alias gacp='git add --all && git commit --allow-empty-message -m "" && git push'
alias mkdir='mkdir -pv'
alias grep='grep --color=auto'
alias diff='diff --color=auto'
alias -- +x='chmod +x'
alias -- -x='chmod -x'

if [[ -f $DOT/shell/aliases.local ]]; then
    source $DOT/shell/aliases.local
fi

# vim: ft=sh
