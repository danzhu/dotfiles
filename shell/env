# -*- mode: sh -*-

if type emacs &> /dev/null; then
    export EDITOR='emacs -nw'
    export GEDITOR=emacs
elif type vim &> /dev/null; then
    export EDITOR=vim
    export GEDITOR=gvim
fi

if type rofi &> /dev/null; then
    export LAUNCHER='rofi -show run'
elif type dmenu_run &> /dev/null; then
    export LAUNCHER=dmenu_run
fi

for terminal in termite gnome-terminal konsole urxvt xterm; do
    if type $terminal &> /dev/null; then
        export TERMINAL=$terminal
        break
    fi
done

for browser in chromium chromium-browser google-chrome firefox; do
    if type $browser &> /dev/null; then
        export BROWSER=$browser
        break
    fi
done

if [[ -f $DOT/shell/env.local ]]; then
    source $DOT/shell/env.local
fi

# vim: ft=sh
