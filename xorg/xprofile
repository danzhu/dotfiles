# -*- mode: sh -*-

export DOT=$(dirname $(dirname $(readlink -f ~/.xprofile)))

if [[ -f ~/.profile ]]; then
    source ~/.profile
fi

source $DOT/shell/path
source $DOT/shell/env

setxkbmap -variant dvp -option ctrl:nocaps
if type dunst &> /dev/null; then
    dunst &
fi
if type udiskie &> /dev/null; then
    udiskie &
fi

# vim: ft=sh
