# -*- mode: sh -*-

export DOT=$(dirname $(dirname $(readlink -f ~/.xprofile)))

if [[ -f ~/.profile ]]; then
    source ~/.profile
fi

source $DOT/shell/path
source $DOT/shell/env

# setxkbmap -variant dvorak -option ctrl:nocaps

runs() {
    if type "$1" &> /dev/null; then
        "$@" &
    fi
}

# runs fcitx
runs dunst
runs udiskie
runs libinput-gestures-setup start
runs transmission-daemon
# runs compton

unset -f runs

# vim: ft=sh
