source ~/.dotfiles/common/path

# auto start X
if [[ -z "$DISPLAY" && -n "$XDG_VTNR" && "$XDG_VTNR" -eq 1 ]] &&
    (( $+commands[startx] )); then
    exec startx
fi

# auto start tmux
if [[ -n "$SSH_CONNECTION" && -z "$TMUX" ]] &&
    (( $+commands[tmux] )); then
    exec tmux new -A -s develop
fi

if [[ -f ~/.profile ]]; then
    source ~/.profile
fi

# vim: ft=zsh
