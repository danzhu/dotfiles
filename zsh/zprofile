# -*- mode: sh -*-

# auto start X
if [[ ! "$DISPLAY" && "$XDG_VTNR" -eq 1 ]]; then
    exec {{tty_login}}
fi

if [[ -f ~/.profile ]]; then
    source ~/.profile
fi

path=({{ for path dir [ }}{{dir}} {{ ] }}$path)
export PATH

# ssh login
if [[ -n "$SSH_CONNECTION" && -z "$TMUX" ]]; then
    if {{ssh_login}}; then
        exit
    fi
fi

# vim: ft=zsh
